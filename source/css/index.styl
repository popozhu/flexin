
.archive_container
  margin-top: 2rem
  margin-bottom: 2rem

.archive_tip
  font-size: 2rem
  color: color-link
  border-left 0.3rem solid color-meta
  padding 0 0 0 13px
  margin-top: 3rem
  
.category-count
.archive-list-count
  &:before
    content: '('
    padding-left: 0.3rem
  &:after
    content: ')'

.archive_title
  margin-top: 1rem
  font-size: 1.5rem
.archive_title_padding
  margin-top: -0.8rem
  font-size: 1rem
  .archive_title_split
    font-size: 1.5rem
  .archive_title_padding_item
    margin-right: 0.5rem

.archive_detail
  flex_ctn()
  vendor(justify-content, space-between)

.extend
.page-number
  font-size: 1.5rem
  margin-left: 1rem
  margin-right: 1rem

// center
.archive_page
  text-align: center
  width: 100%
  
.extend
  &.prev
    float: left
  &.next
    float: right

