
.article-inner
  margin-top: 3rem

.article-entry
  margin-bottom: 4rem

.article-header
  border-left 0.3rem solid color-meta
  margin 20px 0 10px
  padding 0 0 0 13px
  text-align left
  //color: color-meta

  .title
    font-size: 1.5rem

#article-nav-newer
  float: left 

#article-nav-older
  float: right

.article-nav-link-wrap
  font-size: 1.5rem

#article-nav
  margin-bottom: 8rem

hr
  margin-top: 20px
  margin-bottom: 20px
  border: 0
  border-top: 1px solid #eee
  height: 0
  box-sizing: content-box
  &:before
  &:after
    box-sizing: border-box

img
  max-width: 100%
  display: block
  height: auto
  margin: auto

.article-toc
  border: none
  border-left: 0.1rem solid color-meta
  background-color: color-background
  float: right
  padding: 0 0 0 0.3rem
  margin: 0 0 0 13px
  text-align: left
  width: 280px

